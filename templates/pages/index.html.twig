{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Hello
			{{ controller_name }}! ✅</h1>

		{% if is_granted('IS_AUTHENTICATED_FULLY') %}
		<h3>Bonjour {{ app.user.username }}</h3>
			<a class="flex items-center space-x-2 py-1 group hover:border-r-4 hover:border-r-red-600 hover:font-semibold" href="{{ path('logout') }}">
				<span>Déconnexion</span>
			</a>
		{% else %}
			<a class="flex items-center space-x-2 py-1 group hover:border-r-4 hover:border-r-red-600 hover:font-semibold" href="{{ path('login') }}">
				<span>Connexion</span>
			</a>
		{% endif %}


	</div>
{% endblock %}
